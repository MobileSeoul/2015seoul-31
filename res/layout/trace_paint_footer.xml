<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paintFooter"
    android:layout_width="360dp"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@drawable/sketch_bar"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_marginBottom="2dp"
     >
    
    <Button 
        android:id="@+id/paint_reset"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/selector_draw_first"
        android:layout_marginLeft="36dp"
        />

    <Button 
        android:id="@+id/pen"
       android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/selector_draw_pen1"
        android:layout_marginLeft="27dp" />
    
    <Button 
        android:id="@+id/eraser"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/selector_draw_erase"
        android:layout_marginLeft="27dp" />
    
    <Button 
        android:id="@+id/brush"
         android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/selector_draw_pen2"
        android:layout_marginLeft="27dp" />
    
    <Button
        android:id="@+id/color" 
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/selector_draw_color"
        android:layout_marginLeft="27dp" />  

</LinearLayout>
